<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieMan" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/palette_4</item>
        <item name="colorPrimaryVariant">@color/palette_5</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/palette_3</item>
        <item name="colorSecondaryVariant">@color/palette_2</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/bookmark</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>
    
    <style name="searchEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_18sp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:layout_margin">@dimen/margin_16dp</item>
        <item name="android:paddingTop">@dimen/pad_4dp</item>
        <item name="android:paddingBottom">@dimen/pad_4dp</item>
        <item name="android:paddingStart">@dimen/pad_8dp</item>
        <item name="android:paddingEnd">@dimen/pad_8dp</item>
    </style>

    <style name="helpTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:layout_margin">@dimen/margin_12dp</item>
        <item name="android:padding">@dimen/pad_4dp</item>
    </style>

    <style name="headingTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_18sp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:layout_marginStart">@dimen/pad_4dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_12dp</item>
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_8dp</item>
        <item name="android:paddingStart">@dimen/pad_4dp</item>
        <item name="android:paddingEnd">@dimen/pad_4dp</item>
    </style>

    <style name="StarImage" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/ic_star_fill</item>
        <item name="tint">@color/bookmark</item>
        <item name="android:contentDescription">@string/star</item>
    </style>
</resources>